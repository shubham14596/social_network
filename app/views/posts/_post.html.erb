<div class = "card" style = "width: 30rem;">
  <div class="card-header">
    <% if current_user==post.user %>
      <span style="float:right" class="dropdown">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown"></button>
        <ul class="dropdown-menu">
          <li><%= link_to "Edit", "#", class: "dropdown-item" %></li>
          <li><%= link_to "Delete", post_path(post), method: :delete, class: "dropdown-item" %></li>
        </ul>
      </span>
    <% end %>
    <% if current_user == post.user %>
      <%= link_to "#{current_user.first_name} #{current_user.last_name}", my_profile_path %>
    <% else %>
      <%= link_to "#{post.user.first_name} #{post.user.last_name}", users_show_path(user_id: post.user.id) %>
    <% end %>
    <br>
    <%= time_ago_in_words(post.created_at) %><br>
  </div>
  <div class = "card-body">
    
      <%= post.content %><br>
      <% if post.image.attached? %>
        <%= image_tag post.image, style: "width:100%;" %>
      <% end %>
      
      <hr>
      <span id = <%= "likes#{post.id}" %> >
        <%= render(partial: 'posts/like', locals: {post: post}) %>
      </span>
      <span><%= link_to ' Comments', post_comments_path(post), remote: true, class: "fa fa-comment btn" %></span>
      <hr>
      
      <div id= <%= "comments#{post.id}" %> style="display:none" ></div>
      
      <div id= "add_comment" >
        <%= form_with(model: [ post, post.comments.build ], remote: true ) do |f| %>
          <%= f.text_field :content, placeholder: "Add a comment..", style: "width: 100%" %>
        <% end %>
      </div>
    
  </div>
</div>
