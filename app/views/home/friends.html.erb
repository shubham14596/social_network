<%= render(partial: 'home/top', locals: {user: @user}) %>

<div class="row">
  <span class="col-md-1"></span>
  <div id="main" class="col-md-4">
    <ul id="body" type="none">
      <% @friends.each do |f| %>
        <div class="row">
          <div class="col-md-5">
            <%= link_to "#{f.first_name} #{f.last_name}", home_show_path(user_id: f.id) %>
          </div>
            <div class="col-md-4">
              <% if current_user == @user %>
                <i class="fa fa-check"></i> Friend
              <% else %>
                <%= render(partial: 'friendship', locals:{user: f}) %>
              <% end %>
            </div></li>
        </div>
        <hr>
      <% end %>
    </ul>
  </div>
</div>