<% if Like.where(likable: post, user_id: current_user.id).exists? %>
  <%= link_to ' Like', post_like_path(post_id: post.id, id: Like.where(likable: post, user_id: current_user.id)[0].id), method: :delete, remote: true, class: "fa fa-thumbs-up btn", style: "color:lightskyblue;" %>
<% else %>
  <%= link_to ' Like', post_likes_path(post_id: post.id), method: :post, remote: true, class: "fa fa-thumbs-up btn"%>
<% end %>