<div id="main">
  <ul id="body" type="none">

    <div class = "card panel panel-default" style = "width: 30rem;">
      <div class = "card-body">
        <%= form_with scope: :post,url: posts_path do |form| %>
          <p>
            <%= form.label :content %><br>
            <%= form.text_field :content, placeholder: "share your wits.."%>
            <%= form.file_field :image %>
          </p>
     
          <p>
            <%= form.submit :create%>
          </p>

        <% end %>
      </div>
    </div>

    <div id = "posts" class="panel panel-default" style = "width: 30rem;">
      <% @posts.each do |post| %>
        <li>
          <%= render(partial: 'post',  :locals => {:post => post}) %>
        </li>
      <% end %>
    </div>

  </ul>
</div>